doctype html
html
  head
    title PocketCollege-EditTimeline
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    script(type='text/javascript', src='/javascripts/jquerymin.js')
    script(type='text/javascript', src='/javascripts/bootstrapmin.js')
    link(rel='stylesheet', type='text/css', href='/stylesheets/google-font-karma.css')
    link(rel='stylesheet', type='text/css', href='/stylesheets/w3-original.css')
    link(rel='stylesheet', type='text/css', href='/stylesheets/cssfile.css')
    link(rel='stylesheet', type='text/css', href='/stylesheets/bootstrapmin.css')
    style.
      body,h1,h2,h3,h4,h5,h6 {font-family: "Karma", sans-serif}
    style.
      .dropdown-menu-li-a_my:focus, .dropdown-menu-li-a_my:hover {
      color: #262626;
      text-decoration: none;
      background-color: #f5f5f5;
      }
      .dropdown-menu-li-a_my {
      display: block;
      padding-top: 3px;
      padding-right: 20px;
      padding-bottom: 3px;
      padding-left: 20px;
      clear: both;
      font-weight: 400;
      line-height: 1.42857143;
      color: #333;
      white-space: nowrap;
      }
  body
    // Sidebar (hidden by default)
    nav#mySidebar.w3-sidebar.w3-bar-block.w3-card-2.w3-top.w3-xlarge.w3-animate-left(style='display:none;z-index:6;width:20%;min-width:300px')
      a.w3-bar-item.w3-button(href='javascript:void(0)', onclick='w3_close()', style='font-size: 40px;text-decoration: none') &times
      a.w3-bar-item.w3-button(href='/contentpage', onclick='w3_close()', style='text-decoration: none') PocketCollege
      a.w3-bar-item.w3-button(href='/timeline', onclick='w3_close()', style='text-decoration: none') Timeline
      a.w3-bar-item.w3-button(href='/bbs', onclick='w3_close()', style='text-decoration: none') BBS
    // Top menu
    .w3-top(style='background-color:#cccccc')
      .w3-xlarge(style='max-width:1200px;margin:auto')
        .w3-button.w3-padding-32.w3-left(onclick='w3_open()') â˜°
        .w3-right.w3-padding-32 EditTimeline
        .w3-center.w3-padding-16
          a(href='/contentpage')
            img(src='/images/College_info_homepage/logoblack.png', alt='Logo', style='width:150px; height:60px')
        // <div class=" w3-right w3-padding-16">College Information</div>
    div(style='background-color: lightgrey')
      br
      br
      br
      br
      br
      br
      .container(style='background-color:darkgrey')
        h2 My Events
        ul.list-group
          each timeline, i in mytimeline
            li.listSty
              .dropdown
                button.list-group-item.dropdown-toggle(type='button', data-toggle='dropdown') #{timeline.event}
                ul.dropdown-menu
                  li
                    a(href='#') Time: #{timeline.timestr}
                  li
                    a(herf='#') Detail: #{timeline.detail}
                  li
                    - var hyperlink='/editevent_process?event=' + timeline.event;
                    a(href = hyperlink, style='text-decoration:underline') Modify/Delete Event

      br
      br
      .container(style='background-color:darkgrey')
        h2 Add Event
        form(name="add", method="post", action="/addevent_process")
          .input-group
            span.input-group-addon Event
            input#CollegeName.form-control(type='text', name='event', placeholder='My Birthday')
          .input-group
            span.input-group-addon Year
            input#CollegeTitle.form-control(type='text', name='year', placeholder="2000")
          .input-group
            span.input-group-addon Month
            select(type='text',name='month')
              option(value='Jan.') Jan.
                option(value='Feb.') Feb.
                option(value='Mar.') Mar.
                option(value='April') April
                option(value='May', selected) May 
                option(value='June') June
                option(value='July') July
                option(value='Aug.') Aug.
                option(value='Sep.') Sep.
                option(value='Oct.') Oct.
                option(value='Nov.') Nov.
                option(value='Dec.') Dec.
          .input-group
            span.input-group-addon Detail
            input#ImgURL.form-control(type='text', name='detail', placeholder="Please add detail information to your event")
          br
          button.btn.btn-primary.btn-lg.btn-block(type='submit') Add
        br
        br

      br
      br
    script.
      // Script to open and close sidebar
      function w3_open() {
      document.getElementById("mySidebar").style.display = "block";
      }
      function w3_close() {
      document.getElementById("mySidebar").style.display = "none";
      }
    

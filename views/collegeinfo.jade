doctype html
html
  title PocketCollege-CollegeInfo
  meta(charset='UTF-8')
  meta(name='viewport', content='width=device-width, initial-scale=1')
  link(rel='stylesheet', type='text/css', href='/stylesheets/w3-original.css')
  link(rel='stylesheet', type='text/css', href='/stylesheets/google-font-karma.css')
  link(rel='stylesheet', type='text/css', href='/stylesheets/cssfile.css')
  link(rel='stylesheet', type='text/css', href='/stylesheets/bootstrapmin.css')
  style.
    body,h1,h2,h3,h4,h5,h6 {font-family: "Karma", sans-serif}
    .w3-bar-block .w3-bar-item {padding:20px}
  body
    // Sidebar (hidden by default)
    nav#mySidebar.w3-sidebar.w3-bar-block.w3-card-2.w3-top.w3-xlarge.w3-animate-left(style='display:none;z-index:2;width:20%;min-width:300px')
      a.w3-bar-item.w3-button(href='javascript:void(0)', style='text-decoration:none;font-size: 40px;', onclick='w3_close()') &times
      a.w3-bar-item.w3-button(href='/contentpage', style='text-decoration:none;', onclick='w3_close()') PocketCollege
      a.w3-bar-item.w3-button(href='/timeline', style='text-decoration:none;', onclick='w3_close()') Timeline
      a.w3-bar-item.w3-button(href='/bbs', style='text-decoration:none;', onclick='w3_close()') BBS
    // Top menu
    .w3-top(style='background-color:#cccccc')
      .w3-xlarge(style='max-width:1200px;margin:auto')
        .w3-button.w3-padding-32.w3-left(onclick='w3_open()') â˜°
        .w3-right.w3-padding-32 College Information
        .w3-center.w3-padding-16
          a(href='/contentpage')
            img(src='/images/College_info_homepage/logoblack.png', alt='Logo', style='width:150px; height:60px')
        // <div class=" w3-right w3-padding-16">College Information</div>
    // !PAGE CONTENT!
    .w3-main.w3-content.w3-padding(style='max-width:1200px;margin-top:100px')
      ul.listSty
        - for(i=0;i<colleges.length;i+=4){
            li
              ul.w3-row-padding.w3-padding-16.w3-center.listSty
                - for(j=0;i+j<colleges.length && j<=3;j++){
                    li
                      #Shade.w3-quarter
                        a(href='#{colleges[i+j].link}')
                          img(src='#{colleges[i+j].img_src}', alt='#{colleges[i+j].name}', style='width:100%')
                        h3.collegeN  #{colleges[i+j].title}
                        p
                          | #{colleges[i+j].description}

                - }
        - }
        
    hr#ResearchCollege
    .w3-container.w3-padding-32.w3-center
      .w3-padding-32
        h2
          b Search by University or by Keyword
        br
        br
        br
        br
        form(name="search", method="post", action="/searchcollege_process").form-group
          input#inputlg.form-control.input-lg(type='text', name='searchname', placeholder='Stanford University / Computer Science')
          br
          br
          button.btn.btn-default(type='submit') Search
        h6
          i Search your dream school!
    hr
    // End page content
    script.
      // Script to open and close sidebar
      function w3_open() {
      document.getElementById("mySidebar").style.display = "block";
      }
      function w3_close() {
      document.getElementById("mySidebar").style.display = "none";
      }
